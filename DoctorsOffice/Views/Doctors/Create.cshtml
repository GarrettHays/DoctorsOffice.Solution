@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor

<h4>Add a new Doctor</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name:")
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.Label("Select Specialty", "Select Specialty:")
  @Html.DropDownList("SpecialtyId")
  <br>
  <input type="submit" value="Add new Doctor" class="btn btn-primary btn-primary:hover" />
}
<p>@Html.ActionLink("Show all Doctors", "Index",null, null, new { @class = "btn btn-primary btn-primary:hover"})</p>